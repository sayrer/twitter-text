package(default_visibility = ["//visibility:public"])

# Java wrapper library for twitter-text FFM bindings
java_library(
    name = "twitter_text_wrappers",
    srcs = glob(["src/main/java/com/sayrer/twitter_text/*.java"]),
    deps = [
        "//rust_bindings/java_ffm:generated_java_sources",
    ],
    javacopts = [
        "--enable-preview",
        "--release",
        "23",
    ],
)
