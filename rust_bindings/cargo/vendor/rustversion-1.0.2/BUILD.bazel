package(default_visibility = [
  # Public for visibility by "@raze__crate__version//" targets.
  #
  # Prefer access through "//rust_bindings/cargo", which limits external
  # visibility to explicit Cargo.toml dependencies.
  "//visibility:public",
])

licenses([
  "restricted", # "MIT OR Apache-2.0"
])

load(
    "@io_bazel_rules_rust//rust:rust.bzl",
    "rust_library",
    "rust_binary",
    "rust_test",
)

rust_binary(
    name = "rustversion_build_script",
    srcs = glob(["**/*.rs"]),
    crate_root = "build/build.rs",
    edition = "2018",
    deps = [
    ],
    rustc_flags = [
        "--cap-lints=allow",
    ],
    crate_features = [
    ],
    data = glob(["*"]),
    version = "1.0.2",
    visibility = ["//visibility:private"],
)

genrule(
    name = "rustversion_build_script_executor",
    srcs = glob(["*", "**/*.rs"]),
    outs = ["rustversion_out_dir_outputs.tar.gz"],
    tools = [
      ":rustversion_build_script",
    ],
    tags = ["no-sandbox"],
    cmd = "mkdir -p $$(dirname $@)/rustversion_out_dir_outputs/;"
        + " (export CARGO_MANIFEST_DIR=\"$$PWD/$$(dirname $(location :Cargo.toml))\";"
        # TODO(acmcarther): This needs to be revisited as part of the cross compilation story.
        #                   See also: https://github.com/google/cargo-raze/pull/54
        + " export TARGET='x86_64-apple-darwin';"
        + " export RUST_BACKTRACE=1;"
        + " export OUT_DIR=$$PWD/$$(dirname $@)/rustversion_out_dir_outputs;"
        + " export BINARY_PATH=\"$$PWD/$(location :rustversion_build_script)\";"
        + " export OUT_TAR=$$PWD/$@;"
        + " cd $$(dirname $(location :Cargo.toml)) && $$BINARY_PATH && tar -czf $$OUT_TAR -C $$OUT_DIR .)"
)


rust_library(
    name = "rustversion",
    crate_root = "src/lib.rs",
    crate_type = "proc-macro",
    edition = "2018",
    srcs = glob(["**/*.rs"]),
    deps = [
        "//rust_bindings/cargo/vendor/proc-macro2-1.0.8:proc_macro2",
        "//rust_bindings/cargo/vendor/quote-1.0.2:quote",
        "//rust_bindings/cargo/vendor/syn-1.0.14:syn",
    ],
    rustc_flags = [
        "--cap-lints=allow",
    ],
    out_dir_tar = ":rustversion_build_script_executor",
    version = "1.0.2",
    crate_features = [
    ],
)

