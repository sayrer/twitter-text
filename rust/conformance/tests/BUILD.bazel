package(default_visibility = ["//visibility:public"])

load("@rules_python//python:defs.bzl", "py_binary")
load("@tld_gen_deps//:requirements.bzl", "requirement")

exports_files([
    "tld_gen.py",
    "tld_gen_requirements.txt",
])

# Hermetic TLD generator
py_binary(
    name = "tld_gen",
    srcs = ["tld_gen.py"],
    main = "tld_gen.py",
    deps = [
        requirement("PyYAML"),
        requirement("patricia-trie"),
    ],
)

genrule(
    name = "generate_tld_grammar",
    srcs = ["tld_lib.yml"],
    outs = ["generated_tld.pest"],
    cmd = "$(location :tld_gen) --input $(location tld_lib.yml) --output $@",
    tools = [":tld_gen"],
    visibility = ["//visibility:public"],
)
